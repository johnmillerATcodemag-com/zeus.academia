{
  "name": "zeus-academia-admin-interface",
  "version": "1.0.0",
  "description": "Zeus Academia Administrative Interface - Vue.js application for system administrators, registrars, and academic administrators",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "serve": "npm run build && npm run preview"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.5.1",
    "pinia": "^2.1.7",
    "axios": "^1.6.0",
    "bootstrap": "^5.3.0",
    "bootstrap-vue-next": "^0.15.0",
    "chart.js": "^4.4.0",
    "vue-chartjs": "^5.3.0",
    "date-fns": "^2.30.0",
    "@vueuse/core": "^10.9.0",
    "lodash-es": "^4.17.21",
    "ag-grid-vue3": "^31.0.0",
    "ag-grid-community": "^31.0.0",
    "@tanstack/vue-table": "^8.10.0",
    "vue-toastification": "^2.0.0-rc.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/lodash-es": "^4.17.12",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "^0.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.19.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "jsdom": "^24.0.0",
    "sass": "^1.69.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "vue-tsc": "^1.8.0",
    "@vitest/coverage-v8": "^1.0.0"
  }
}
