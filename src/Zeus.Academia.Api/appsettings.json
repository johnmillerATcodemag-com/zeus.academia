{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ZeusAcademiaDb;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "Identity": {
    "Password": {
      "RequiredLength": 8,
      "RequireDigit": true,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireNonAlphanumeric": true,
      "RequiredUniqueChars": 6
    },
    "Lockout": {
      "DefaultLockoutMinutes": 15,
      "MaxFailedAccessAttempts": 5,
      "AllowedForNewUsers": true
    },
    "User": {
      "AllowedUserNameCharacters": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-._@+",
      "RequireUniqueEmail": true
    }
  },
  "JwtSettings": {
    "SecretKey": "ZeusAcademia-JWT-SecretKey-2025-256bits-Development-Only",
    "Issuer": "Zeus.Academia.Api",
    "Audience": "Zeus.Academia.Client",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "RateLimit": {
    "AuthenticationRequests": 5,
    "GeneralRequests": 100,
    "WindowMinutes": 15,
    "BlockDurationMinutes": 60
  },
  "Cors": {
    "AllowedOrigins": [
      "https://zeus-academia.com",
      "https://app.zeus-academia.com"
    ]
  },
  "AllowedHosts": "*"
}
